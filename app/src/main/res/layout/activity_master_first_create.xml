<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.setting.SettingMasterActivity">
    <!--완료 버튼 클릭 -> main화면으로 넘어가기-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#5A5A5A"
            android:gravity="center"
            android:text="마스터 비밀번호 생성"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- 마스터 비밀번호 변경 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지켜줄게 앱에서 사용할 마스터 비밀번호를 입력하세요"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            />

    </LinearLayout>

    <!-- 자동 잠금 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <EditText
            android:id="@+id/masterEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="마스터 비밀번호를 입력하세요"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_master_create_done"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="myOnClose"
            android:text="완료"
            android:textSize="15sp"
            android:layout_width="0dp" />

    </LinearLayout>

</LinearLayout>